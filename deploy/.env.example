# Environment Variables Template cho Docker Compose
# Copy file này thành .env và điền các giá trị thực tế

# ========================================
# DATABASE CONFIGURATION (Supabase)
# ========================================
DATABASE_HOST=aws-0-ap-south-1.pooler.supabase.com
DATABASE_PORT=6543
DATABASE_USERNAME=postgres.your-project-id
DATABASE_PASSWORD=your-database-password
DATABASE_NAME=postgres

# ========================================
# JWT CONFIGURATION
# ========================================
# Generate với: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_REFRESH_EXPIRATION=30d

# ========================================
# MICROSERVICES API KEYS
# ========================================
# Generate với: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
IDENTITY_API_KEY=identity-service-secret-key-2024
PROFILE_API_KEY=profile-service-secret-key-2024
PRODUCT_API_KEY=product-service-secret-key-2024
TABLE_API_KEY=table-service-secret-key-2024

# ========================================
# OPTIONAL: SERVICE PORTS (default values)
# ========================================
# API_GATEWAY_PORT=8888
# IDENTITY_PORT=8080
# PROFILE_PORT=8081
# PRODUCT_PORT=8082
# TABLE_PORT=8083
